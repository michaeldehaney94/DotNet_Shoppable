

@{
    ViewData["Title"] = "Reset user password";
}

<div class="mx-auto rounded border p-4 shadow" style="width: 400px;">
    <h2>Forgot Password</h2>
    <hr />

    @if (ViewBag.SuccessMessage != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@ViewBag.SuccessMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" name="email" value="@ViewBag.Email" />
            <span class="text-danger">@ViewBag.EmailError</span>
        </div>

        <div class="row mb-3">
            <div class="col d-grid">
                <button type="submit" class="btn btn-warning btn-sm">Submit</button>
            </div>
            <div class="col d-grid">
                <a class="btn btn-warning btn-sm" asp-controller="Account" asp-action="Login" role="button">
                    Login
                </a>
            </div>
        </div>



    </form>

</div>
