@model StoreSearchModel

@{
    ViewData["Title"] = "Store";
}

<h2 class="pb-4 text-center">Products</h2>

<form class="row g-3 mb-3">
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="brand" asp-for="Brand" onchange="this.form.submit()">
            <option value="">All Brands</option>
            <option value="Puma">Puma</option>
            <option value="Adidas">Adidas</option>
            <option value="Ralph Lauren">Ralph Lauren</option>
            <option value="Kaukko">Kaukko</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="category" asp-for="Category" onchange="this.form.submit()">
            <option value="All Categories">All Categories</option>
            <option value="Hoodies & Sweatshirts">Hoodies & Sweatshirts</option>
            <option value="T-Shirt & Tops">T-Shirt & Tops</option>
            <option value="Jerseys">Jerseys</option>
            <option value="Leggings">Leggings</option>
            <option value="Jackets">Jackets</option>
            <option value="Tracksuits">Tracksuits</option>
            <option value="Bags & Backpacks">Bags & Backpacks</option>
            <option value="Polos">Polos</option>
            <option value="Shorts">Shorts</option>
            <option value="Pants">Pants</option>
            <option value="Skirts & Dresses">Skirts & Dresses</option>
            <option value="Shoes">Shoes</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="sort" asp-for="Sort" onchange="this.form.submit()">
            <option value="newest">Order By Newest</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </div>
    <div class="col-lg-6 col-md-12 d-flex">
        <input class="form-control me-2" name="search" asp-for="Search" placeholder="Search by Name"/>
        <button class="btn btn-light btn-sm" type="submit">Search</button>
    </div>
</form>

<div class="row mb-5 g-3">
    @foreach (var product in ViewBag.Products)
    {
        <div class="col-lg-3 col-md-6">
            <div class="rounded border shadow p-3 text-center h-100">
                <img src="/products/@product.ImageFileName" class="img-fluid" alt="..." style="/* height:180px; */ object-fit:contain;" />
                <hr />
                <h6 class="py-2">@product.Name</h6>
                <p class="">
                    Brand: @product.Brand, Category: @product.Category
                </p>
                <h6 class="mb-3">$@(product.Price)</h6>
                <a class="btn btn-light btn-sm mb-2 mx-2" role="button" asp-controller="Store" asp-action="Details" asp-route-id="@product.Id">Details</a>
                <button type="button" class="btn btn-light btn-sm mb-2 mx-2">
                    Add to Cart
                    @* <img width="20" height="20" src="https://img.icons8.com/material-outlined/24/add-shopping-cart.png" alt="add-shopping-cart" /> *@
                </button>
            </div>
        </div>
    }
</div>

<nav class="pb-5 pt-5">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            string active = "";
            if (i == ViewBag.PageIndex) { active = "active"; }
            <li class="page-item" @active><a class="page-link" asp-route-pageIndex="@i" asp-route-search="@Model.Search" asp-route-brand="@Model.Brand" asp-route-category="@Model.Category" asp-route-sort="@Model.Sort">@i</a></li>
        }
    </ul>
</nav>