<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoppable</title>
    <link href="/bag.png" rel="icon" type="image/x-icon"/>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotNet_Shoppable.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="./css/style.css"/>
</head>
<body>
    <header>
        <nav class="bg-black text-white p-0">
            <p class="text-center">Don't miss out on our 2025 New Years! 30% OFF on all items until 10/01/2025!</p>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Shoppable
                    <img width="30" height="30" src="https://img.icons8.com/pulsar-color/48/shopping-bag.png" alt="shopping-bag" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index"><strong>Store</strong></a>
                        </li>

                    </ul>

                    @* Check if user is signed in and if user is authenticated after login *@
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<ApplicationUser> SignInManager
                    @inject UserManager<ApplicationUser> UserManager

                    @if (SignInManager.IsSignedIn(User)) 
                    {
                        //get user data
                        var appUser = await UserManager.GetUserAsync(User);

                        if (User.IsInRole("admin")) 
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @* <img width="26" height="26" src="https://img.icons8.com/fluency-systems-filled/50/737373/user-male-circle.png" alt="user-male-circle" /> *@
                                        <img width="24" height="24" src="https://img.icons8.com/material-sharp/24/1A1A1A/user-male-circle.png" alt="user-male-circle" />
                                        @(appUser!.FirstName + " " + appUser!.LastName + "(Admin)")
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Products</a></li>
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout" onclick="return confirm('@(appUser!.FirstName), are you sure you want to logout?')">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else if (User.IsInRole("client"))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @* <img width="26" height="26" src="https://img.icons8.com/fluency-systems-filled/50/737373/user-male-circle.png" alt="user-male-circle" /> *@
                                        <img width="24" height="24" src="https://img.icons8.com/material-sharp/24/1A1A1A/user-male-circle.png" alt="user-male-circle" />
                                        @(appUser!.FirstName + " " + appUser!.LastName + "(Client)")
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout" onclick="return confirm('@(appUser!.FirstName), are you sure you want to logout?')">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout" onclick="return confirm('@(appUser!.FirstName), are you sure you want to logout?')">Logout</a>
                                </li>
                            </ul>
                        }
                    }
                    else
                    {
                        @* if user is not authenticated/logged in show 'register' and 'login' buttons *@
                        <ul class="navbar-nav">
                            <li class="nav-link">
                                <a class="text-black mx-2 link-opacity-50-hover" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-link">
                                <a class="text-black mx-2 link-opacity-50-hover" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>

    @* Check if home/index is the hompage, in order to use the full width of the banner in home/index and remove the container element from homepage *@
    @if (ViewData["HomePage"] == null)
    {
        <div class="container mt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    } 
    else
    {
        @RenderBody()
    }
    
    <footer class="border-top footer text-muted">
        <div class="container">
            <img width="20" height="20" src="https://img.icons8.com/pulsar-color/48/shopping-bag.png" alt="shopping-bag" />
            &copy; @DateTime.Now.Year Shoppable, LLC. @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


